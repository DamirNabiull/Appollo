                <Button Click="Keyboard_Clcik" Grid.Column="20" Width="75" Style="{StaticResource KeyboardStyle}">
                    <TextBlock Text="-" Foreground="#FFFFFF" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Height="40"/>
