                </Button>

                <Button Click="Keyboard_Clcik" Grid.Column="18" Width="75" Style="{StaticResource KeyboardStyle}">
                    <TextBlock Text="0" Foreground="#FFFFFF" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50"/>
