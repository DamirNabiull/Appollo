<Window x:Class="Appollo.RifleChambers.Guns_Video.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Appollo.RifleChambers.Guns_Video"
        mc:Ignorable="d"
        Background="Black"
        Closing="Window_Closing"
        Loaded="Window_Loaded"
        WindowStyle="None"
        Title="MainWindow" Height="1920" Width="1080">
    <Grid>
        <MediaElement x:Name="player" LoadedBehavior="Manual" UnloadedBehavior="Manual" Width="1080" Height="1920" MediaEnded="player_MediaEnded"/>
        <Image x:Name="cam" Margin="0 480 0 0" Width="480" Height="270" VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill">
            <Image.RenderTransform>
                <RotateTransform Angle="270" />
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
